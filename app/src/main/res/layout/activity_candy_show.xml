<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CandyShow">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@android:color/transparent"
            android:fitsSystemWindows="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:scaleType="centerCrop"
                android:contentDescription="تفاصيل الوجبة"
                app:layout_collapseMode="parallax"
                android:id="@+id/imgcandy"
                android:src="@drawable/a"/>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbarcandy"
                app:popupTheme="@style/Theme.AppCompat.Light"
                app:title="اسم الطبخة"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tabel">
                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#FF9800"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="سعرات حرارية"
                                android:textSize="20sp"
                                android:padding="5dp"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" الوقت"
                                android:textSize="20sp"
                                android:padding="5dp"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" المصدر"
                                android:textSize="20sp"
                                android:padding="5dp"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/candycal"
                                android:text=" 360"
                                android:textSize="20sp"
                                android:fontFamily="@font/fontara"
                                android:padding="5dp"
                                android:layout_margin="5dp"
                                android:textColor="#000000"
                                />

                            <TextView
                                android:id="@+id/candytime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:fontFamily="@font/fontara"
                                android:text=" 1ساعة"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/candysur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:fontFamily="@font/fontara"
                                android:text=" فتافيت"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </TableRow>
                        /*المكونات*/
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FF9800"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" المكونات"
                                android:textSize="20sp"
                                android:padding="5dp"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                />
                        </TableRow>
                    </TableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tabel"
                        android:background="#fff"
                        android:id="@+id/lin1">

                        <TextView
                            android:id="@+id/candyallintg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:padding="5dp"
                            android:fontFamily="@font/fontara"
                            android:text="تفصيل الوجبة"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    /*طريقة التحضير*/
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/lin1"
                        android:background="#FF9800"
                        android:gravity="center_horizontal"
                        android:id="@+id/lin2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" طريقة التحضير"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:layout_margin="5sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/lin2"
                        android:background="#FFFFFF"
                        android:id="@+id/lin3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/candyallmm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:padding="5dp"
                            android:fontFamily="@font/fontara"
                            android:text="  تفاصيل التحضير"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:padding="5dp"
                            android:fontFamily="@font/fontara"
                            android:text="\n"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/index"
                            android:enabled="false"/>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/favCandy"
        android:src="@drawable/ic_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:layout_anchor="@id/bar"
        app:layout_anchorGravity="bottom|left|end"
        />




</androidx.coordinatorlayout.widget.CoordinatorLayout>